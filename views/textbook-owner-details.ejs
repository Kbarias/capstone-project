    body {
        background-image: url("/image/books.png");
        background-repeat: no-repeat;
        background-color: white;
        background-size: 25%;
        background-position: 55% 300px;
    }
</style>

<nav class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 myHorizontalNav">
    <a class="navbar-brand col-sm-3 col-md-2 mr-0 text-uppercase text-xl-left" href="#"><b><i>Agor√°</i></b></a>
    <a class="navbar-brand col-sm-3 col-md-2 mr-0" href="/dashboard/admin/<%=id%>/<%=member%>"><b>HOME</b></a>
    <a class="navbar-brand col-sm-3 col-md-2 mr-0" href="/exchange/bookshelf/<%=id%>/<%=member%>"><b>BOOKSHELF</b></a>
    <a class="navbar-brand col-sm-3 col-md-2 mr-0" href="/exchange/postings/<%=id%>/<%=member%>"><b>MY POSTINGS</b></a>
    <a class="navbar-brand col-sm-3 col-md-2 mr-0" href="/exchange/<%=id%>/<%=member%>"><b>EXCHANGE</b></a>

    <a class="navbar-brand col-sm-6 col-md-2 mr-0" href="/exchange/history/<%=id%>/<%=member%>"><b>HISTORY</b></a>
</nav>


<div class="container-fluid">
    <div class="row">
        <nav class="col-md-2 d-none d-md-block bg-dark sidebar myVerticalNav">
            <div class="sidebar-sticky">
                <br>
                <img class="img-fluid rounded mx-auto d-block bg-white" src="/image/logo.png">
                <h3 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-5 mb-1 text-muted">
                    <span>Welcome <%=member%></span>
                    <a class="d-flex align-items-center text-muted" href="#">
                        <span data-feather="plus-circle"></span>
                    </a>
                </h3>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link mya2 active" href="/dashboard/admin/<%=id%>/<%=member%>">
                            <span data-feather="home"></span> DASHBOARD <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link mya2" href="/exchange/<%=id%>/<%=member%>">
                            <span data-feather="file"></span> EXCHANGE
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link mya2" href="/gather/<%=id%>/<%=member%>">
                            <span data-feather="shopping-cart"></span> GATHER
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link mya2" href="/places/<%=id%>/<%=member%>">
                            <span data-feather="users"></span> WANDER
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link mya2" href="/dashboard/admin/<%=id%>/<%=member%>">
                            <span data-feather="users"></span> MANAGE
                        </a>
                    </li>
                </ul>
                <!--Other text to appear in between-->
                <h3 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-5 mb-1 text-muted">
                    <span></span>
                    <a class="d-flex align-items-center text-muted" href="#">
                        <span data-feather="plus-circle"></span>
                    </a>
                </h3>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link mya2" href="/users/logout">
                            <span data-feather="bar-chart-2"></span> LOGOUT
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link mya2" href="#">
                            <span data-feather="layers"></span> SETTINGS
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link mya2" href="#">
                            <span data-feather="file-text"></span> HELP
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4 myMainContent">
            <div class="container-fluid text-dark">
                <div class="row">
                    <h1 class="h1 text-dark "> Details for <%=merch.book.title%></h1>
                </div>
                <div class="row">
                    <h4 class="h4 text-dark"> Display details of a specific textbook.</h4>
                </div>
                <hr>
                <div class="row justify-content-between">
                    <div class="col-4">

                        <h3>Author: <%=merch.book.author%></h3>
                        <h4>Edition: 
                            <%if(!merch.book.edition){ %>
                                N/A
                            <%} else { %>
                                <%=merch.book.edition%>
                            <%}%>
                        </h4>
                        <h4>ISBN No.: <%=merch.book.isbn%></h4>
                        <h4>MISC.</h4>
                        <ul>
                            <li>Condition: <%=merch.condition_desc%></li>
                            <li>Other stuffs here</li>
                        </ul>
                        <p>Textbook Image here </p>
                        <p><img src="/image/marvin.jpg" style="width: 40%;" alt="A Great HTML Resource"></p>
                        <p>Add a link to Amazon for the book <a href="https://www.amazon.com/HTML5-Masterminds-3rd-revolutionary-applications-ebook/dp/B07KYB26T2/ref=sr_1_1?dchild=1&keywords=how+to+html5&qid=1586653659&s=digital-text&sr=1-1" target="_blank">Web site</a></p>
                        <hr>
                        <!-- And add a copyright notice.-->
                        <p>&#169; ACME Publishing, 2020</p>
                    </div>
                    <div class="col-4">
                        <h4>Owner: <%=merch.owner.first_name%> <%=merch.owner.last_name%></h4>
                        <h5>Ratings:
                            <% for (var star=0; star< rating; star++){ %>
                                <span class="fa fa-star checked"></span>
                                <% } %>
                        </h5>
                        <hr>
                        <h4>Requesting members:</h4>
                        <h5 class="text-danger">Note: Please only select one to accept.</h5>
                        <div class="table-responsive myTable">
                            <table class="table table-striped table-sm" id="myTable">
                                <thead>
                                    <tr class="myTable">
                                        <th scope="col">Name</th>
                                        <th scope="col">Date requested</th>
                                        <th scope="col">Ratings</th>
                                        <th scope="col">Check to accept</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    <!--Sample code-->
                                    <% for(var i=0; i < 6; i++) { %>
                                        <tr class=" myTable">
                                            <td scope="row">name
                                                <%= i %>
                                            </td>
                                            <td scope="row">Date
                                                <%=i %>
                                            </td>
                                            <td scope="row">
                                                <% for (var star=0; star< 4; star++){ %>
                                                    <span class="fa fa-star checked"></span>
                                                    <% } %>
                                            </td>

                                            <td scope="row">
                                                <input type="checkbox" id="checkbox1" name="checkbox1" class="" unchecked="">
                                            </td>

                                        </tr>
                                        <% } %>

                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="col-4">
                        <h3>For: <%=merch.offered_as%></h3>
                        <h4>Price: $<%=merch.cost%></h4>
                        <h4>Date available:</h4>
                        <h4>Available period:</h4>
                        <ul>
                            <li>from:</li>
                            <li>to:</li>
                        </ul>
                        <h4> Add comment:</h4>
                        <div class="col-sm-12">
                            <textarea class="col-sm-12" id="description" rows="2"></textarea>
                        </div>
                        <br>
                        <a class="btn btn-success btn-lg" href="#" role="button">Accept</a>
                        <a class="btn btn-success btn-lg" href="#" role="button">Clear/Reset confirmation</a>
                        <hr>
                        <a class="btn btn-danger col-12 btn-lg" href="exchange/postings/<%=id%>/<%=member%>" role="button">   Confirm   </a>
                        <br>
                        <br>
                        <h4 class="text-danger">Once you click <b>confirmed</b>, the requesting party will be notified and you will receive email notification if the offer is confirmed.</h4>
                        <h5 class="text-warning">The text book will then be removed from the list of avaialable items to be exchanged.</h5>
                        <hr>
                        <h4 class="text-info">Please coordinate with the requester accordingly for the exchange. You can view the status of the request in your bookshelf.</h4>
                    </div>
                </div>
            </div>

        </main>
    </div>
</div>

