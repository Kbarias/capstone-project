<style>
    body {
        background-image: url("../image/background1.png");
        background-attachment: fixed;
        background-size: cover;
        background-color: rgba(0, 0, 0, 0);
        background-blend-mode: lighten;
        width: 100%;
        height: 100vh;
    }
</style>

<nav class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 myHorizontalNav">
    <a class="navbar-brand col-sm-3 col-md-2 mr-0 text-uppercase text-xl-left" href="#"><b><i>Agor√°</i></b></a>
    <a class="navbar-brand col-sm-3 col-md-2 mr-0" href="http://localhost:3000/dashboard-user/name"><b>HOME</b></a>
    <a class="navbar-brand col-sm-3 col-md-2 mr-0" href="http://localhost:3000/gather-join/name"><b>GROUPS</b></a>
    <a class="navbar-brand col-sm-3 col-md-2 mr-0" href="http://localhost:3000/tutor-join/name"><b>TUTORING</b></a>

</nav>

<div class="container-fluid">
    <div class="row">
        <nav class="col-md-2 d-none d-md-block bg-dark sidebar myVerticalNav">
            <%- include ('./partials/sidebar'); -%>
        </nav>

        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4 myMainContent text-dark">
            <div class="container-fluid">
                <div class="row">
                    <H1> My Groups</H1>
                </div>
                <!-- List of groups -->
                <div class="row">
                    <div class="col-lg-6">
                        <H2>All Groups</H2>

                        <div class="table-responsive">
                            <table class="table table-striped table-sm" id="myTable">
                                <thead>
                                    <tr class="table-dark">
                                        <th scope="col">Group Name</th>
                                        <th scope="col">Capacity</th>
                                        <th scope="col">Organizer</th>
                                        <th scope="col">Joined</th>
                                        <th scope="col">Details</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    <!--Sample code to pull data out from DB iterating through all entries.-->
                                    <% for(var i=0; i < 150; i++) { %>
                                        <tr class="table-secondary">
                                            <td scope="row">group name
                                                <%= i %>
                                            </td>
                                            <td scope="row">Capacity
                                                <%=i*3 %>
                                            </td>
                                            <td scope="row">Organizer
                                                <%=i %>
                                            </td>
                                            <td scope="row">
                                                Y
                                            </td>
                                            <td scope="row">
                                                <a class="btn btn-primary justify-content-end" href="#" role="button">Select</a>
                                            </td>

                                        </tr>
                                        <% } %>

                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- Group details starts here -->
                    <div class="col-lg-6">
                        <H2> Group Details</H2>
                        <div class="form-group mt-5 pt-5 pl-3 bg-dark">
                            <!-- Group Name -->
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label mytext">Group Name:</label>
                                <div class="col-sm-9 mytext">
                                    <p>
                                        Group
                                        <%=member%>
                                    </p>
                                </div>

                            </div>
                            <!-- Group Organizer -->
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label mytext"> Organizer:</label>
                                <div class="col-sm-9 mytext">
                                    <p>
                                        <%=member%>
                                    </p>
                                </div>
                            </div>
                            <!-- Group Members -->
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label mytext"> Members:</label>
                                <div class="col-sm-9">

                                    <span class="badge col-sm-3 badge-pill badge-light" style="font-size: 16px;"><%=member%></span>
                                    <span class="badge col-sm-3 badge-pill badge-light" style="font-size: 16px;"><%=member%></span>
                                    <span class="badge col-sm-3 badge-pill badge-light" style="font-size: 16px;"><%=member%></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label d-flex justify-content-center ">--- </label>
                                <div class="col-sm-9">
                                    <span class="badge col-sm-3 badge-pill badge-light" style="font-size: 16px;"><%=member%></span>
                                    <span class="badge col-sm-3 badge-pill badge-light" style="font-size: 16px;"><%=member%></span>
                                    <span class="badge col-sm-3 badge-pill badge-light" style="font-size: 16px;"><%=member%></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label d-flex justify-content-center ">--- </label>
                                <div class="col-sm-9">
                                    <span class="badge col-sm-3 badge-pill badge-light" style="font-size: 16px;"><%=member%></span>
                                    <span class="badge col-sm-3 badge-pill badge-light" style="font-size: 16px;"><%=member%></span>
                                    <span class="badge col-sm-3 badge-pill badge-light" style="font-size: 16px;"><%=member%></span>
                                </div>
                            </div>
                            <!-- Meeting Location -->
                            <div class="form-group row">
                                <label class="col-3 mytext" for="Location">Meeting Location:</label>

                                <textarea class="form-control border-dark col-8" id="exampleTextarea" rows="3" style="height: 96px;">
                                    Gregory's Coffee
                                    878 Lexington
                                    New York, NY 10065
                                </textarea>

                            </div>
                            <!-- Date-->
                            <div class="form-group row">
                                <label class="col-3 mytext" for="Date">Date:</label>
                                <input type="date" class="col-sm-3 my-2 my-sm-0" id="date" name="date">

                            </div>
                            <!-- Time-->
                            <div class="form-group row">
                                <label class="col-3 mytext" for="startTime">Start Time:</label>
                                <input type="time" class="col-sm-2 my-2 my-sm-0" id="starttime" name="starttime">
                                <label class="col-2 mytext" for="endTime">End Time:</label>
                                <input type="time" class="col-sm-2 my-2 my-sm-0" id="endtime" name="endtime">
                            </div>
                            <div class="form-group row pb-5">
                                <label for="createButton" class="col-sm-3 mytext"> Join or Leave:</label>
                                <div class="col-sm-9 d-flex justify-content-around">
                                    <button class="btn btn-outline-success col-sm-3 my-2 my-sm-0" type="submit">JOIN</button>
                                    <button class="btn btn-outline-danger col-sm-3 my-2 my-sm-0" type="submit">LEAVE</button>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>

        </main>
    </div>
</div>