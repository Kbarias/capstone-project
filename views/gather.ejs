                    <table class="table table-striped table-sm " id="myTable">
                        <thead>
                            <tr class="myTable">
                                <th scope="col">Name</th>
                                <th scope="col">Location Name</th>
                                <th scope="col">Subject</th>
                                <th scope="col">Type</th>
                                <th scope="col">Capacity</th>
                                <th scope="col">Click to View</th>
                            </tr>
                        </thead>
                        <tbody>

                            <!--Sample code-->
                            <% for(var i=0; i < 150; i++) { %>
                                <tr class=" myTable">
                                    <td scope="row">
                                        <%= i %>
                                    </td>
                                    <td scope="row">
                                        <%=i %>
                                    </td>
                                    <td scope="row">
                                        <%=i %>
                                    </td>
                                    <td scope="row">
