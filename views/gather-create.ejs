        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4 myMainContent text-dark">
            <div class="container-fluid">
                <div class="row">
                    <H1> Create a Group</H1>
                </div>
                <form class="container-fluid justify-content bg-light form-text">
                    <div class="form-group row pt-5">
                        <label for="staticEmail" class="col-sm-4 col-form-label">1. Select a group type:</label>
                        <div class="col-sm-8">
                            <select class="custom-select">
                                <option value="1">Private</option>
                                <option value="2">Public</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputGroupName" class="col-sm-4 col-form-label">2. Enter a group name:</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputGroupName" placeholder="Group Name">
                        </div>
                    </div>
                    <div class="form-group row">
                        <h6 class="text-dark col-sm-4 col-form-label">3. Add members to your group.</h2>
                            <div class="table-responsive myTable">
                                <table class="table table-striped table-sm " id="myTable">
                                    <thead>
                                        <tr class="myTable">
                                            <th scope="col">Name</th>
                                            <th scope="col">Username</th>
                                            <th scope="col">Email</th>
                                            <th scope="col">Click to Select</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                            <% users.forEach(function(row) { %>
                                                <tr class="table-secondary">
                                                    <td scope="row">
                                                        <%=row._id.first_name %>
                                                        <%=row._id.last_name %>
                                                    </td>
                                                    <td scope="row">
                                                        <%=row._id.username %>
                                                    </td>
                                                    <td scope="row">
                                                        <%=row._id.email %>
                                                    </td>
                                                    <td>
                                                        <a class="btn btn-secondary" href="#" role="button">Select</a>
                                                    </td>
                                                </tr>
                                            <% }) %> 
                
                                    </tbody>
                                </table>
                            </div>
                    </div>
                    
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label d-flex justify-content-center"> Members added:</label>
                        <div class="col-sm-8">

                            <span class="badge col-sm-3 badge-pill badge-dark" style="font-size: 18px;"><%=member%></span>
                            <span class="badge col-sm-3 badge-pill badge-dark" style="font-size: 18px;"><%=member%></span>
                            <span class="badge col-sm-3 badge-pill badge-dark" style="font-size: 18px;"><%=member%></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label d-flex justify-content-center">--- </label>
                        <div class="col-sm-8">

                            <span class="badge col-sm-3 badge-pill badge-dark" style="font-size: 18px;"><%=member%></span>
                            <span class="badge col-sm-3 badge-pill badge-dark" style="font-size: 18px;"><%=member%></span>
                            <span class="badge col-sm-3 badge-pill badge-dark" style="font-size: 18px;"><%=member%></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label d-flex justify-content-center">--- </label>
                        <div class="col-sm-8">

                            <span class="badge col-sm-3 badge-pill badge-dark" style="font-size: 18px;"><%=member%></span>
                            <span class="badge col-sm-3 badge-pill badge-dark" style="font-size: 18px;"><%=member%></span>
                            <span class="badge col-sm-3 badge-pill badge-dark" style="font-size: 18px;"><%=member%></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="inputPlaceName" class="col-sm-4 col-form-label">4. Add a meeting place:</label>
                        <div class="col-sm-8 form-inline">
                            <input class="form-control col-sm-8 " type="search" id="inputPlaceName" placeholder="Search for a location">
                            <button class="btn btn-outline-success col-sm-2 my-2 my-sm-0" type="submit">Search</button>
                            <button class="btn btn-outline-success col-sm-2 my-2 my-sm-0" type="submit">Select</button>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputDateTime" class="col-sm-4 col-form-label">5. Select a date and time:</label>
                        <div class="col-sm-8">

                            <label for="Date">Date:</label>
                            <input type="date" class="col-sm-3 my-2 my-sm-0" id="date" name="date">
                            <label for="startTime">Start Time:</label>
                            <input type="time" class="col-sm-2 my-2 my-sm-0" id="starttime" name="starttime">
                            <label for="endTime">End Time:</label>
                            <input type="time" class="col-sm-2 my-2 my-sm-0" id="endtime" name="endtime">
                            <button class="col-sm-2 my-2 my-sm-0" type="submit">Select</button>
                        </div>
                    </div>
                    <!-- Dummie group for spacing -->
                    <div class="form-group row"></div>
                    <div class="form-group row"></div>
                    <div class="form-group row"></div>
                    <div class="form-group row"></div>
                    <div class="form-group row"></div>
                    <div class="form-group row"></div>
                    <div class="form-group row"></div>
                    <div class="form-group row"></div>
                    <div class="form-group row pb-5">
