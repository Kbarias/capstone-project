                                    <h4>Role: </h4>
                                    <%if(editing.is_admin) {%>
                                        <h5><%="Admin"%></h5>
                                    <%}else{%>
                                        <h5><%="Member" %></h5>
                                    <%}%>
                                </span>

                                </fieldset>
                                <fieldset class="form-group d-flex ">
                                    <legend>Account Status:</legend>
                                    <h5><%=editing.account_status%></h5>
                                    <div class="form-check col-6">
                                        <label class="form-check-label">
                                        <%if(editing.account_status == 'Active') {%>
