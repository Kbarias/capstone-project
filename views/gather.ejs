                                        <th scope="col">Capacity</th>
                                        <th scope="col">Click to View</th>
                                    </tr>
                                </thead>
                                <tbody>                                    
                                    <% tutoring.forEach(function (row) {%>
                                        <tr class=" myTable">
                                            <td scope="row">
                                                <%= row.name %>
                                            </td>
                                            <td scope="row">
                                                <%=row.place.name %>
                                                <br>
                                                <%=row.place.address.full_address %>
                                            </td>
                                            <td scope="row">
                                                <%=row.description %>
                                            </td>
