<div class="container-fluid">
    <div class="row">
        <nav class="col-md-2 d-none d-md-block bg-dark sidebar myVerticalNav">
            <%- include ('./partials/sidebar'); -%>
        </nav>

        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4 myMainContent">

            <div class="row">
                <h1 class="h1 text-dark "> Wander to a new place.</h1>
                <h4 class="h4 text-dark"> Look for a new hangout spot or place to study with the Wander feature. Here you can browse for meetup locations that address your needs, or add a new place to be listed.</h3>
            </div>

            <div class="row mt-3">
                <div class="col-2">
                    <!-- spacing -->
                </div>
                <div>
                    <h2 class=" h2 text-dark"> Find a new meetup spot.</h2>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-2">
                    <!-- spacing -->
                </div>
                <div class="col-8 navbar navbar-expand-lg navbar-light bg-light">
                    <div class="search-container container-fluid col-12 mx-0 px-0 justify-content-between">
                        <form class="form-inline col-12 mx-0 px-0" action="/action_page.php">
                            <div class="col-5 mx-0 px-0">
                                <input class="col-12 mx-0 px-0" type="text" placeholder="Find: cafe, library, diner,etc.." name="pointOfInterest">
                            </div>
                            <div class="col-6 mx-0 px-0">
                                <input class="col-12 mx-0 px-0" type="text" class="col-sm-8" placeholder="Near: address, neighborhood, city, state, or zip" name="address">
                            </div>
                            <div class="col mx-0 px-0">
                                <button class="mx-0 px-0" type="submit"><i class="fa fa-search"></i></button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>


            <div class="container-fluid">

                <!-- <h2 class="text-dark">Textbook Lists</h2> -->
                <div class="row">
                    <div class="table-responsive myTable col-6 px-0">
                        <table class="table table-striped table-sm" id="myTable">
                            <thead>
                                <tr class="myTable">
                                    <th scope="col">Location Name</th>
                                    <th scope="col">Address</th>
                                    <th scope="col">Hours</th>
                                    <th scope="col">Capacity</th>
                                    <th scope="col">Rating</th>
                                    <th scope="col">Select</th>
                                </tr>
                            </thead>
                            <tbody>

                                <!--Sample code-->
                                <% for(var i=0; i < 150; i++) { %>
                                    <tr class="myTable">

                                        <td scope="row">place :
                                            <%=i %>
                                        </td>
                                        <td scope="row">address :
                                            <%=i %>
                                        </td>
                                        <td scope="row">hours :
                                            <%=i %>
                                        </td>

                                        <td scope="row">Capacity :
                                            <%=i %>
                                        </td>
                                        <td scope="row">
                                            <!--change this number eg 3 to whatever the database has and run the loop to show how many stars -->
                                            <% for (var star=0; star< 3; star++){ %>
                                                <span class="fa fa-star checked"></span>
                                                <% } %>
                                        </td>
                                        <td>
                                            <a class="btn btn-secondary btn-sm" href="http://localhost:3000/wander-detail/name" role="button">Click to Explore</a>
                                        </td>
                                    </tr>
                                    <% } %>

                            </tbody>
                        </table>
                    </div>
                    <div class="col-6">
                        <div id="map">

                            <p>This is a map</p>

                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
