        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4 myMainContent">
            <div class="container-fluid text-dark">
                <h1>My Postings</h1>
                <h4>Your postings is a collection of all the books you are offering. Your posts are automatically updated
                    when an exchange is completed. To view more details, click the item you want to select.</h4>

                <div class="card border-standard mb-3" style="max-width:100%;margin-top: 0%">

                    <div class="card-body ">
                        <%- include ('./partials/messages'); -%>
                        <h3 class="card-text">Enter a new book you would like to offer.</h3>
                        <form action="/exchange/post-book/<%=id%>/<%=member%>" method="POST">
                        <div>
                            
                            <div class="form-group d-inline-flex">
                                <label class="col-form-label col-form-label-sm" for="isbn">ISBN No.</label>
                                <input class="form-control form-control-sm" type="text" placeholder="ISBN Number only" id="isbn" name='isbn'>
                            </div>
                            <div class="form-group d-inline-flex">
                                <label class="col-form-label col-form-label-sm" for="title">Title:</label>
                                <input class="form-control form-control-sm" type="text" placeholder="Title" id="title" name="title">
                            </div>
                            <div class="form-group d-inline-flex">
                                <label class="col-form-label col-form-label-sm" for="authpr">Author:</label>
                                <input class="form-control form-control-sm" type="text" placeholder="Author" id="author" name="author">
                            </div>
                            <div class="form-group d-inline-flex">
                                <label class="col-form-label col-form-label-sm" for="edition">Edition</label>
                                <input class="form-control form-control-sm" type="text" placeholder="Edition" id="edition" name="edition">
                            </div>
                            <div class="form-group d-inline-flex">
                                <label class="col-form-label col-form-label-sm" for="offer">Offer type</label>
                                <select class="custom-select" id="offer" name="offer">
                                  <option value="rent">For Rent</option>
                                  <option value="sale">For Sale</option>
                                  <option value="donate">Donate</option>
                                </select>
                            </div>
                        </div>
                        <div>
                            <div class="form-group d-inline-flex">
                                <label class="col-form-label col-form-label-sm" for="condition">Condition</label>
                                <select class="custom-select" id="condition" name="condition">
                                  <option value="like new">Like New</option>
                                  <option value="fairly new">Fairly New</option>
                                  <option value="some damage">Some damage but usable</option>
                                </select>
                            </div>

                            <div class="form-group d-inline-flex">
                                <label class="control-label"> Offering Price: </label>
                                <div class="form-group">
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">$</span>
                                        </div>
                                        <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)" id="price" name="price">
                                        <div class="input-group-append">
                                            <span class="input-group-text">.00</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>

                    </div>
                </div>
            </div>
            <h2 class="text-dark">Textbooks you are offering.</h2>
            <div class="table-responsive myTable">
                <table class="table table-striped table-sm " id="myTable">
                    <thead>
                        <tr class="myTable">
                            <th scope="col">ISBN NO.</th>
                            <th scope="col">Book Title</th>
                            <th scope="col">Author</th>
                            <th scope="col">Rent/Buy/Sell</th>
                            <th scope="col">Condition</th>
                            <th scope="col">Status</th>
                            <th scope="col">Click to Select</th>
                        </tr>
                    </thead>
                    <tbody>

                        <!--Sample code-->
                            <% books.forEach(function(row) { %>
                                <tr class="table-secondary">
                                    <td scope="row">
                                        <%=row.book.isbn %>
                                    </td>
                                    <td scope="row">
                                        <%=row.book.title %>
                                    </td>
                                    <td scope="row">
                                        <%=row.book.author %>
                                    </td>
                                    <td scope="row">
                                        <%=row.offered_as %>
                                    </td>
                                    <td scope="row">
                                        <%=row.condition_desc %>
                                    </td>
                                    <td scope="row">
                                        <%=row.status.state %>
                                    </td>
                                    <td>
                                        <a class="btn btn-secondary" href="#" role="button">Select</a>
                                    </td>
                                </tr>
                            <% }) %> 

                    </tbody>
                </table>
            </div>

        </main>
