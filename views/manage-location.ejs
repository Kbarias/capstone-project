    * {
        margin: 0;
        padding: 0;
    }
    
    body {
        background-image: url("/image/wander-bg.png");
        background-color: white;
        background-attachment: fixed;
        background-repeat: no-repeat;
        background-size: 45%;
        background-position: 65% 80%;
        width: 100%;
        height: 100vh;
    }
    
    #map {
        height: 100%;
        width: 100%;
    }
</style>

